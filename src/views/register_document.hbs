<div class="container p-4">
    <div class="container overflow-auto">
        <div>
            <h2>Registro de documentos</h2>
        </div>
        <form action="#" method="post" id="register_form">
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="form-group">
                        <label for="title">Titulo:</label>
                        <input type="text" class="form-control" name="title" required="true">
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="form-group">
                        <label for="editorial">Editorial:</label>
                        <input type="text" class="form-control" name="editorial" required="true">
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="form-group">
                        <label for="year">Año:</label>
                        <input type="text" class="form-control" name="year" id="year_picker" autocomplete="off" required="true" pattern="\d{4}">
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="form-group">
                        <label for="count">Cantidad de ejemplares:</label>
                        <input type="number" class="form-control" name="count" required="true">
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="form-group">
                        <label for="lastname">Tipo de documento:</label>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="document_type" required="true"
                                    onchange="onChangeDocumentType()" value="book">Libro
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="document_type" required="true"
                                    onchange="onChangeDocumentType()" value="megazine">Revista
                            </label>
                        </div>
                    </div>
                </li>

                <li class="list-group-item" id="document_identifier_item" style="display: none;">
                    <div class="form-group">
                        <label for="document_identifier" id="document_identifier_label"></label>
                        <input type="text" class="form-control" name="document_identifier" required="true" pattern="((?=(?:\D*\d){10}(?:(?:\D*\d){3})?$)[\d-]+)|([0-9]{4}-[0-9]{3}[0-9xX])">
                    </div>
                </li>

                <li class="list-group-item" id="megazine_article_count_item" style="display: none;">
                    <div class="form-group">
                        <label for="megazine_article_count" id="dmegazine_article_count_label">Cantidad de
                            artículos</label>
                        <input type="number" class="form-control" name="megazine_article_count">
                    </div>
                </li>

                <li class="list-group-item" id="book_authors_item" style="display: none;">
                    <div class="form-group">
                        <label for="book_authors" id="book_authors_label">Autores</label>
                        <input type="text" class="form-control" name="book_authors">
                    </div>
                </li>
            </ul>
            <br />
            <button type="submit" class="btn btn-primary btn-block">Enviar</button>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#year_picker").datepicker({
            format: "yyyy",
            viewMode: "years",
            minViewMode: "years",
            autoclose: true
        });
    });

    function onChangeDocumentType() {
        $("#document_identifier_item").show();
        if ($("input[name=document_type]:checked").val() == 'megazine') {
            $("#document_identifier_label").html("ISSN:");
            $("#megazine_article_count_item").show();
            $("#book_authors_item").hide();
        } else {
            $("#document_identifier_label").html("ISBN:");
            $("#megazine_article_count_item").hide();
            $("#book_authors_item").show();
        }
    }
</script>